<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.openmrs.module.insuranceclaims"/>

    <!-- Wraps InsuranceClaimService methods in DB transactions and OpenMRS interceptors,
    which set audit info like dateCreated, changedBy, etc.-->
    <bean id="insuranceclaims.InsuranceClaimService"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.openmrs.module.insuranceclaims.api.service.impl.InsuranceClaimServiceImpl">
                <property name="dao" ref="insuranceclaims.InsuranceClaimDao"/>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors"/>
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource"/>
        </property>
    </bean>

    <bean id="insuranceclaims.fhirDiagnosis"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.openmrs.module.insuranceclaims.api.service.fhir.impl.FHIRClaimDiagnosisServiceImpl">
                <property name="diagnosisDao" ref="insuranceclaims.InsuranceClaimDiagnosisDao"/>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors"/>
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource"/>
        </property>
    </bean>

    <bean id="insuranceclaims.fhirInsurance"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.openmrs.module.insuranceclaims.api.service.fhir.impl.FHIRInsuranceClaimServiceImpl">
                <property name="attributeService" ref="insuranceclaims.AttributeServiceDao"/>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors"/>
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource"/>
        </property>
    </bean>


    <bean id="insuranceclaims.fhirCItem"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.openmrs.module.insuranceclaims.api.service.fhir.impl.FHIRClaimItemServiceImpl">
                <property name="insuranceClaimItemDao" ref="insuranceclaims.InsuranceClaimItemDao"/>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors"/>
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource"/>
        </property>
    </bean>

    <bean id="insuranceclaims.fhirRestClient"
          class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager"/>
        </property>
        <property name="target">
            <bean class="org.openmrs.module.insuranceclaims.api.client.impl.ClaimHttpRequestImpl">
                <property name="insuranceClaimService" ref="insuranceclaims.fhirInsurance"/>
                <property name="diagnosisService" ref="insuranceclaims.fhirDiagnosis"/>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors"/>
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource"/>
        </property>
    </bean>

    <!-- Adds module services to OpenMRS context so it can be accessed
    calling e.g. Context.getService(InsuranceClaimService.class) -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.insuranceclaims.api.service.InsuranceClaimService</value>
                <ref bean="insuranceclaims.InsuranceClaimService"/>
            </list>
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.insuranceclaims.api.service.fhir.FHIRClaimDiagnosisService</value>
                <ref bean="insuranceclaims.fhirDiagnosis"/>
            </list>
        </property>
    </bean>

    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.insuranceclaims.api.client.ClaimHttpRequest</value>
                <ref bean="insuranceclaims.fhirRestClient"/>
            </list>
        </property>
    </bean>
</beans>
